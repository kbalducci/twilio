<%= simple_form_for(@appointment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :who %>
    <%= f.input :where %>
    <%= f.input :string %>
    <%= f.input :when %>
    <%= f.input :what %>
    <%= f.input :why %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
